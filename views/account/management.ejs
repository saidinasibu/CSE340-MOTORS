<% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
      res.redirect('/')
  } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
      <% errors.array().forEach(error => { 
          if (error.msg !== "Invalid value") { %>
              <li><%= error.msg %></li>
          <% } 
      }) %>
  </ul>
<% } %>




<h2>Welcome <%- yourName %></h2>

<% if (accountType === "Employee" || accountType == "Admin") { %>
    <h3>Inventory Management</h3>

    <p>
      <a href="/inv" title="Access Inventory Management">Manage Inventory</a>
    </p>
<% } %>
